# configs
alias zshrc='vim ~/.zshrc'
alias vimrc='vim ~/.vimrc'
alias tmuxrc='vim ~/.tmux.conf'

# used
alias _='sudo '
alias v='vim'
alias ia='open $1 -a /Applications/iA\ Writer.app'
alias la='ls -halk'
alias ip='dig +short myip.opendns.com @resolver1.opendns.com'
alias :q='exit'

# tmux
alias tt='tmux'
alias ttk='tmux kill-session -t'
alias ttpi='~/.tmux/plugins/tpm/bin/install_plugins'
alias ttpu='~/.tmux/plugins/tpm/bin/update_plugins all'
alias ttpc='~/.tmux/plugins/tpm/bin/clean_plugins'

# npm
alias s='npm start'
alias b='npm run build'
alias d='npm run deploy'
alias l='npm run lint'
alias f='npm run format'
alias t='npm run test'
alias npmG='npm i -g '
alias npmS='npm i -S '
alias npmD='npm i -D '
alias npmL='npm list -g --depth=0'
alias npmI="rm -rf node_modules/ && rm -f package-lock.json && npm i"

## brew
alias bu='brew update; brew upgrade; brew cleanup; brew doctor'

## macOS
alias ql='qlmanage -p 2>/dev/null'
alias oo='open .'

## useful
alias u='make up'
alias d='make down'
alias gbg='git branch --all | grep'
